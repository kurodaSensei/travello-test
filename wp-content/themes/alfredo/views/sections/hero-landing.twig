<div class="h-100 w-100" style="background-color: {{hero.background_color}}">
    <div class="container col-xxl-8 py-5">
        <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
            <div class="col-10 col-sm-8 col-lg-6">
                {% for image in hero.images %}  
                    <img src="{{Image(image.image).src}}" class="d-block mx-lg-auto img-fluid {{image.type}}" alt="{{image.image.alt}}">
                {% endfor %}
            </div>
            <div class="col-lg-6">
                <h1 class="display-5 fw-bold lh-1 mb-3">{{hero.title}}</h1>
                {{hero.text}}
                {% include "snippets/button--link.twig" with { button: hero.button } %}
            </div>
        </div>
    </div>
</div>

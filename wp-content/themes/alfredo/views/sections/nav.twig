<nav class="navbar navbar-expand-lg navbar__container">

	<div class="container-fluid mx-lg-3 mx-md-3 mx-2">
		<a class="navbar-brand" href="#">
			{{logo}}
		</a>
		<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarNav">
			<ul class="navbar-nav ms-auto">
				{% for item in mainMenu.items %}
					<li class="nav-item">
						<a class="nav-link {{loop.index == mainMenu.items|length ? 'active' : ''}}" aria-current="page" href="{{item.link}}">{{item.title}}</a>
					</li>
				{% endfor %}
				<li class="nav-item">
					<button class="nav-link nav-link__button" aria-current="page" title="Menu Button">
						<img src="{{fn('get_stylesheet_directory_uri')}}/static/menu.svg" alt="" width="20" height="100%">
					</button>
				</li>
			</ul>
		</div>
	</div>
</nav>
